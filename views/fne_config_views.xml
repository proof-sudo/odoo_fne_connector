<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vue de configuration FNE dans les paramètres généraux -->
    <record id="view_fne_config_settings" model="ir.ui.view">
        <field name="name">fne.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="FNE - Facturation Électronique" 
                     string="FNE - Facturation Électronique" data-key="fne_config">
                    
                    <h2>Configuration de la Facturation Électronique Normée (FNE)</h2>
                    
                    <!-- Connexion API -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fne_mode" widget="radio" required="1"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label string="Environnement d'exécution" for="fne_mode"/>
                                <div class="text-muted">
                                    Sélectionnez Test pour les tests ou Production pour l'environnement réel
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Clé API FNE" for="fne_api_key"/>
                                <div class="text-muted">
                                    Clé d'authentification fournie par la DGI
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fne_api_key" password="True" placeholder="Votre clé API..."/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- URLs API -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="URL Test" for="fne_test_url"/>
                                <div class="text-muted">
                                    URL de l'API FNE en environnement de test
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fne_test_url" placeholder="http://54.247.95.108/ws"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="URL Production" for="fne_prod_url"/>
                                <div class="text-muted">
                                    URL de l'API FNE en environnement de production
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fne_prod_url" placeholder="https://www.services.fne.dgi.gouv.ci/ws"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Configuration métier -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Point de Vente" for="fne_point_de_vente"/>
                                <div class="text-muted">
                                    Identifiant du point de vente (ex: SIEGE NEURONES)
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fne_point_de_vente" placeholder="SIEGE NEURONES" required="1"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="fne_auto_send"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="fne_auto_send"/>
                                <div class="text-muted">
                                    Si activé, les factures seront automatiquement envoyées à la DGI après validation
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer -->
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane">
                                <label string="Pied de page FNE" for="fne_footer"/>
                                <div class="text-muted">
                                    Message affiché en bas des factures certifiées (HTML autorisé)
                                </div>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="fne_footer" widget="html"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </xpath>
        </field>
    </record>

    <!-- Menu d'accès (optionnel, les paramètres sont déjà dans Configuration > Paramètres) -->
    <menuitem 
        id="menu_fne_config" 
        name="FNE Configuration"
        parent="base.menu_administration"
        action="base.action_general_configuration"
        sequence="100"
        groups="base.group_system"/>
        
</odoo>
