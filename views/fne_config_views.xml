<odoo>
    <data>
        <!-- Vue formulaire indépendante -->
        <record id="view_fne_config_settings_form" model="ir.ui.view">
            <field name="name">fne.config.settings.form</field>
            <field name="model">fne.config.settings</field>
            <field name="arch" type="xml">
                <form string="Configuration FNE">
                    <sheet>
                        <group>
                            <group>
                                <field name="fne_api_key" password="True"/>
                                <field name="fne_mode"/>
                                <field name="fne_auto_send"/>
                            </group>
                            <group>
                                <field name="fne_test_url"/>
                                <field name="fne_prod_url"/>
                                <field name="point_de_vente"/>
                            </group>
                            <group>
                                <field name="footer" widget="html" options="{'rows': 5}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="fne_config_settings_tree_view" model="ir.ui.view">
            <field name="name">fne.config.settings.tree</field>
            <field name="model">fne.config.settings</field>
            <field name="arch" type="xml">
                <tree string="Configuration FNE" create="false"  edit="false">
                    <field name="fne_mode" string="Mode"/>
                    <field name="fne_api_key" string="API Key"/>
                    <field name="fne_test_url" string="URL Test"/>
                    <field name="fne_prod_url" string="URL Production"/>
                    <field name="point_de_vente" string="Point de Vente"/>
                    <field name="fne_auto_send" string="Envoi Auto"/>
                </tree>
            </field>
        </record>


        <!-- Action -->
        <record id="action_fne_config_settingss" model="ir.actions.act_window">
            <field name="name">Configuration FNE</field>
            <field name="res_model">fne.config.settings</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Menu -->
        <menuitem id="menu_fne_config_root"
          name="FNE"
          parent="base.menu_administration"
          sequence="50"/>

        <menuitem id="menu_fne_config_settings"
                  name="Paramètres FNE"
                  parent="menu_fne_config_root"
                  action="action_fne_config_settings"
                  sequence="10"/>
    </data>
</odoo>
